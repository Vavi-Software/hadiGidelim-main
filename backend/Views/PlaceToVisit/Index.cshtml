@model IEnumerable<PlaceToVisit>

@{
    ViewData["Title"] = "Gezilecek Yerler";
    Layout = "_Layout";
}

<!DOCTYPE html>

<div class="px-4 py-5 my-5 text-center" style="margin: 0 !important; padding-top: 0 !important;">
    <img class="d-block mx-auto" src="~/images/vavilogo.png" alt="" width="360" height="240">
    <h2 class="display-5 fw-bold text-body-emphasis" style="margin-bottom: 0 !important;">Gezilecek Yerler</h2>
</div>

<div class="d-flex flex-column flex-md-row gap-4 pb-4 align-items-center justify-content-center">
    <div class="list-group">
        @foreach (var item in Model.Reverse())
        {
            <a asp-controller="PlaceToVisit" asp-action="Detail" asp-route-id="@item.Id" class="list-group-item list-group-item-action d-flex gap-3 py-3" aria-current="true">
                
                <img src="~/images/@item.MainImage" alt="twbs" width="64" height="64" class="rounded-circle flex-shrink-0">
                <div class="d-flex gap-2 w-100 justify-content-between">
                    <div>
                        <h6 class="mb-0">@item.Name</h6>
                        <p class="mb-0 opacity-75">
                            @{
                                var shortContent = new string(item.Content.Take(50).Concat("...").ToArray());
                                @shortContent
                            }
                        </p>
                    </div>
                    <small class="opacity-50 text-nowrap">
                        @{ var days = DateTime.Now.Subtract(item.CreatedAt).Days; } 
                        
                        @if (days == 0)
                        {
                            <span class="badge bg-primary">Today</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">
                                @{
                                    var day = new string(days.ToString().Concat("d").ToArray());
                                    @day
                                }
                            </span>
                        }
                    </small>
                </div>
            </a>
        }
    </div>
</div>
<div class="d-flex flex-column justify-content-center align-items-center mb-5">
    <a asp-controller="PlaceToVisit" asp-action="Create" type="button" class="btn btn-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16"/>
            <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4"/>
        </svg>
    </a>
</div>